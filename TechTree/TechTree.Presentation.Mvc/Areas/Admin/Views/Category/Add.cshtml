@model TechTree.Application.Dtos.CategoryDtos.CreateCategoryDto

<div class="col-12 mt-5">
    <h4 class="align-text-top">Insert New Category</h4>
    <form method="post" asp-action="Add" asp-controller="Category" class="w-50 mt-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label class="form-label">Title</label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Description</label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Thumbnail Picture</label>
            <input type="text" asp-for="ThumbnailImagePath" class="form-control" />
            <span asp-validation-for="ThumbnailImagePath" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
        @Html.AntiForgeryToken()
    </form>
    <div class="form-group mt-3">
        <a asp-action="Index" asp-controller="Category" class="link-info text-warning">Back to List</a>
    </div>
</div>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}


