@model TechTree.Application.Dtos.UserDtos.LoginDto


<div class="row">
        <div class="col-md-12 mt-5 m-lg-5">
            <h1>Login</h1>
            <form method="post" class="w-50">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control w-50" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control w-50" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                        <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>

                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn-primary">Login</button>
                </div>
            </form>

        </div>
    </div>


